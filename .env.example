# AcademyInsight 환경 변수 템플릿
# 이 파일을 복사하여 환경에 맞게 수정하세요.
#
# 개발 환경 (Windows PC): cp .env.example .env → MONGODB_URI를 dev DB로 설정
# 운영 환경 (MacBook):    cp .env.macbook .env

# ===========================================
# Server
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# Database - MongoDB
# ===========================================
# 로컬: mongodb://localhost:27017/academyinsight
# 개발 (MacBook dev DB): mongodb://admin:admin123@172.30.1.72:27017/academyinsight_dev?authSource=admin
# 운영 (Docker 내부): mongodb://mongo:27017/academyinsight
MONGODB_URI=mongodb://localhost:27017/academyinsight

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# ===========================================
# CORS
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Crawler
# ===========================================
CRAWL_ENABLED=true
CRAWL_SCHEDULE=0 4 * * *

# ===========================================
# External APIs
# ===========================================
# 네이버 검색 API (https://developers.naver.com 에서 발급)
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 카카오 검색 API - 다음카페 fallback용 (https://developers.kakao.com 에서 발급)
KAKAO_REST_API_KEY=your_kakao_rest_api_key
